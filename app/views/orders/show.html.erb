<div class="container py-5">
  <div class="card-wrapper py-4 px-4" style="min-height: 50vh">
    <div class="cart-title-wrapper">
      <div>
        <h1>Riepilogo dell'ordine</h1>
      </div>
      <div class="order-status-box">
        <h3>Stato dell'ordine:</h3>
        <p><%= current_status(@order.status) %></p>
      </div>
    </div>
      <div class="cart-header">
        <h3><%= @order.store.name %></h3>
        <p><%= short_address(@order.store) %></p>
      </div>
        <% @order.cart_products.each do |cart_product| %>
            <%= render 'orders/order_product', cart_product: cart_product %>
          <% end %>
          <div class="row py-3">
            <div class="col-md-8 delivery-time-box">
              <h3 class="">Consegna Entro:</h3>
              <p>Venerdì 12 aprile 2020. Ore 12.00</p>
            </div>
            <div class="col-md-3 cart-total-price-card">
              <h3 class="cart-total-price-text">Totale Ordine: </h3>
              <span class="cart-total-price"><%= prettify_price(@order.amount_cents) %>€</span> <br/>
              <div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 total-price-row">
              <%= link_to "Modifica l'ordine", edit_cart_path(@order.cart), class: 'btn btn-primary' %>
            </div>

            <div class="col-md-3 offset-md-5 total-price-row">
              <%= link_to "Completa l'acquisto", new_order_delivery_info_path(@order), class: 'btn btn-primary' %>
            </div>
          </div>

  </div>
</div>
