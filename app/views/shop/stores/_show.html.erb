<h1><%= store.name %></h1>

<div class="container">
    <div class="row">
    <div class="col-md-8 mx-auto">
      <%= simple_form_for store, url: shop_store_path(store), method: :patch do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :phone_number %>
      <%= f.input :street %>
      <%= f.input :zip_code %>
      <%= f.input :state %>
  <% end %>
    </div>
  </div>
</div>

