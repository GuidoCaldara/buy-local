<form action="/shop/products" method="get" class="" data-remote="true" id="shop-product-filter-form">
  <div class="shop-product-card">
    <div class="shop-product-card-image">
    </div>
    <div class="shop-product-card-category">
      <div class="filter-category-dropdown">Filtra</div>
      <div class="filter-catregory-checkboxes-container hidden">
        <% categories.each do |category| %>
        <div>
          <input id="<%= category.name %>" type="checkbox" name="categories[]" value="<%= category.id %>">
          <label for="<%= category.name %>"><%= category.name %></label>
        </div>
        <% end %>
      </div>
    </div>
    <div class="shop-product-card-name">
      <input autocomplete="off" id="shop-product-form-query" type="text" name="query" class="form-control" placeholder="Cerca un prodotto">
    </div>
    <div class="add-new-product-link-container">
      <%= link_to new_shop_product_path, class:"btn btn-sm btn-dark", remote: true do %>
        <i class="fas fa-plus mr-2"></i>Aggiungi un prodotto
      <% end %>

    </div>

  </div>
 </form>


