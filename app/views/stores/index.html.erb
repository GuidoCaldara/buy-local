
<div class="container-fluid">
  <div class="row">
    <div class="col-md-7">
      <% Store.all.each do |store| %>
        <%= render 'store', store: store, show: false %>
      <% end %>
    </div>
    <div class="col-md-5 .d-sm-none">
      <div id="map"
       style="width: 100%;
       height: 100vh;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>


